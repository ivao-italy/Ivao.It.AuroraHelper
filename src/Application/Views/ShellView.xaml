<mah:MetroWindow
    x:Class="Ivao.It.AuroraHelper.Application.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Ivao.It.AuroraHelper.Application"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:Background="Black"
    mc:Ignorable="d">
    <!--  Background="DarkGray"  -->
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <svg:SvgViewbox
                Width="22"
                Height="22"
                Source="/Images/it_symbol_WHITE.svg" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="LaunchIvaoAuroraWiki" ToolTip="Wiki Ivao.aero for Aurora Sector File">
                <svg:SvgViewbox
                    Width="22"
                    Height="22"
                    Source="/Images/logo_s_white.svg" />
            </Button>
            <Button Click="LaunchGitHub" ToolTip="Github issue tracking">
                <icons:PackIconModern
                    Width="22"
                    Height="22"
                    Kind="SocialGithubOctocat" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <svg:SvgViewbox
            Height="90"
            Margin="30,0,0,0"
            HorizontalAlignment="Left"
            Source="/Images/Logo_IT_WHITE.svg" />
        <ContentControl
            x:Name="ActiveItem"
            Grid.Row="1"
            Margin="20" />


        <StatusBar Grid.Row="2">
            <StatusBarItem>© Ivao Italy Division</StatusBarItem>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0">Made with</TextBlock>
                    <icons:BootstrapIcons Width="12" Kind="Heart" />
                    <TextBlock Margin="5,0,0,0">by IT-WM</TextBlock>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalContentAlignment="Right">
                <TextBlock Margin="0,0,5,0" HorizontalAlignment="Right">v 1.1.0</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
